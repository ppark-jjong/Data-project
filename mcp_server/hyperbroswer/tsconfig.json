{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/resources/static/data/summarized.json"
  ],
  "exclude": [
    "node_modules",
    "src/resources/dynamic/**"
  ]
}